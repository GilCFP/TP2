{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "${workspaceFolder}/hospital-scheduling-simulation/src/*.cpp",
                "-o",
                "${workspaceFolder}/hospital-scheduling-simulation/bin/tp2.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}